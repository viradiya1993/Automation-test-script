{
  "compilerOptions": {
    "downlevelIteration": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "../out-tsc/app",
    "module": "es2020",
    "baseUrl": "./",
    "paths": {
      "@app/*": [
        "./app/*"
      ],
      "@content/*": [
        "./app/content/*"
      ],
      "@core/*": [
        "./app/core/*"
      ],
      "@shared/*": [
        "./app/shared/*"
      ]
    },
    "types": [
      "hammerjs"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "preserveWhitespaces": true
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
